<schemalist>
  <schema id="com.github.bartzaalberg.php-tester" path="/com/github/bartzaalberg/php-tester/" gettext-domain="my-app">

   <key name="style-scheme" type="s">
		<default>'classic'</default>
		<summary>Preferred Style Scheme</summary>
		<description>Set the preferred style scheme.</description>
	</key>
	<key name="use-system-font" type="b">
		<default>true</default>
		<summary>Use system font</summary>
		<description>Whether Scratch should use the default system font</description>
	</key>
	<key name="font" type="s">
		<default>'Droid Sans Mono 10'</default>
		<summary>Preferred Font</summary>
		<description>Set the preferred font.</description>
	</key>
	<key name="php-version" type="s">
		<default>''</default>
		<summary>The PHP version you are using</summary>
		<description>Set the preferred PHP version.</description>
	</key>
	<key name="php-path" type="s">
		<default>'/usr/bin'</default>
		<summary>The PHP path</summary>
		<description>This path is used to search for PHP. If this path is wrong the application wont be able to operate</description>
	</key>

  </schema>
</schemalist>

